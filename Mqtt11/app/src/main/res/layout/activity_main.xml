<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnConn"
        android:layout_width="154dp"
        android:layout_height="0dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="104dp"
        android:onClick="connect"
        android:text="Connect"
        app:layout_constraintBottom_toTopOf="@+id/btnEndRecord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPTT"
        android:layout_width="122dp"
        android:layout_height="63dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="418dp"
        android:onClick="startRecord"
        android:text="Talk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEndRecord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConn"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnEndRecord"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="418dp"
        android:onClick="stopRecord"
        android:text="Stop Talk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnPTT"
        app:layout_constraintTop_toBottomOf="@+id/btnConn" />

</androidx.constraintlayout.widget.ConstraintLayout>