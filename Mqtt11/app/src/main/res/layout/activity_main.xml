    <TextView
        android:id="@+id/txtConnState"
        android:layout_width="211dp"
        android:layout_height="142dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="70dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPTT"
        tools:text="Not Connected" />

    <Button
        android:id="@+id/btnConn"
        android:layout_width="154dp"
        android:layout_height="142dp"
        android:layout_marginTop="32dp"
        android:onClick="connect"
        android:text="Connect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPTT"
        android:layout_width="137dp"
        android:layout_height="142dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:onClick="startRecord"
        android:text="Talk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConn" />

    <Button
        android:id="@+id/btnEndRecord"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:onClick="stopRecord"
        android:text="Stop Talk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnPTT"
        app:layout_constraintTop_toBottomOf="@+id/btnConn" />


</androidx.constraintlayout.widget.ConstraintLayout>